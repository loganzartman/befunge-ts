{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["ES6", "DOM"],
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.stories.ts"]
}
