{
  "name": "befunge-ts",
  "version": "1.0.0",
  "description": "Befunge-93 interpreter for TypeScript",
  "files": [
    "dist/"
  ],
  "main": "dist/index.js",
  "scripts": {
    "test": "pnpm jest",
    "start": "pnpm parcel",
    "build": "pnpm build-lib && pnpm build-parcel",
    "build-parcel": "pnpm parcel build",
    "build-lib": "pnpm tsc -p src/lib",
    "clean": "rimraf dist dist-ide"
  },
  "packageManager": "pnpm@8.12.1",
  "keywords": [],
  "author": "Logan Zartman",
  "license": "MIT",
  "targets": {
    "ide": {
      "source": "src/ide/index.html",
      "distDir": "dist-ide"
    }
  },
  "devDependencies": {
    "@codemirror/view": "^6.22.3",
    "@parcel/transformer-typescript-tsc": "^2.10.3",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "codemirror": "^6.0.1",
    "dedent": "^1.5.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "jest": "^29.7.0",
    "parcel": "^2.10.3",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
